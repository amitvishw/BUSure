<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#F2F2F3"
    android:id="@+id/loginLayout"
    android:clickable="true"
    android:contextClickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We Have Sent You A Confirmation Code In Your Email ID."
        android:id="@+id/tvSendMail"
        android:layout_marginTop="60dp"
        android:textColor="#453C5C"
        android:textSize="19sp" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/etCode"
        android:layout_gravity="center_horizontal"
        android:inputType="numberPassword"
        android:backgroundTint="#453C5C"
        android:gravity="center"
        android:hint="Code"
        android:textColor="#453C5C"
        android:maxLength="6"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/bConfirm"
        android:background="@drawable/buttonshape"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickConfirm"
        android:layout_marginTop="10dp"
        android:textColor="#453C5C"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I Didn&apos;t Get Mail ! Resend."
        android:id="@+id/tvResend"
        android:layout_marginTop="20dp"
        android:onClick="onClickResend"
        android:textSize="15sp"
        android:textColor="#453C5C" />

</LinearLayout>
